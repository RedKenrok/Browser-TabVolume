{
	"manifest_version": 2,
	
	"version": "1.0.0",
	"name": "Tab Volume",
	"short_name": "Tab Volume",
	"description": "A volume controller for each tab.",
	"icons": {
		"16": "icons/16.png",
		"32": "icons/32.png",
		"64": "icons/64.png",
		"128": "icons/128.png"
	},
	"author": "Ron Dekker",
	
	"options_ui": {
		"page": "options.html",
		"chrome_style": true
	},
	"browser_action": {
		"default_popup": "popup.html"
	},
	"permissions": [
		"activeTab",
		"storage",
		"tabCapture"
	],
	"background": {
		"scripts": [ "background.js" ]
	}
}